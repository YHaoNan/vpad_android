<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="android.view.View" />
        <variable
            name="padTitle"
            type="String" />
        <variable
            name="deleteVisiable"
            type="Boolean" />
    </data>
    <top.yudoge.vpad.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pad"
        android:clickable="true"
        android:background="@drawable/bg_akai_mpd_218_normal"
        android:layout_margin="@dimen/pad_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/deleteBtn"
            android:clickable="true"
            android:visibility="@{deleteVisiable ? View.VISIBLE : View.GONE}"
            android:background="#00000000"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/baseline_remove_circle_24"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:text="@{padTitle}"
            android:textStyle="bold"
            android:padding="@dimen/normal_space"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </top.yudoge.vpad.view.SquareRelativeLayout>
</layout>
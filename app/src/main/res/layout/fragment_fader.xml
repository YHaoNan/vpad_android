<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="@dimen/big_space"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <top.yudoge.vpad.view.UnscrollableRecyclerView
                android:id="@+id/fader_group"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_fader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/right_drawer"
            android:orientation="vertical"
            android:padding="@dimen/big_space"
            android:background="@color/white"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_width="100dp"
            android:layout_height="match_parent">
            <top.yudoge.vpad.view.VerticalSeekBar
                android:id="@+id/master_fader"
                android:background="@null"
                android:thumb="@drawable/fader_logic"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_marginTop="@dimen/normal_space"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Master"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>